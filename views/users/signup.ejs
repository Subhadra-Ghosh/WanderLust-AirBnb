<% layout("/layouts/boilerplate.ejs") %>


<div class="row mt-3    ">
    <h2 class="col-6 offset-3">Signup on WanderLust</h2>
     <div class="col-6 offset-3 ">
         <form method="post" action="/signup" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-lable" >userName</label>
                <input name="username" id="username" placeholder="Enter username" type="text" class="form-control bgcolor" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-lable" >Email</label>
                <input name="email" id="email" placeholder="Enter Email" type="email" class="form-control bgcolor" required>
               
            </div>
            <div class="mb-3">
                <label for="password" class="form-lable" >Password</label>
                <input name="password" id="password" placeholder="Enter password" type="password" class="form-control bgcolor" required>
            </div>
            <button class="btn btn-success">Signup</button>

         </form>
     </div>
</div>
